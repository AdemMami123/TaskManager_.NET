@model IEnumerable<Task_Manager.ViewModels.ManagerViewModel>

@{
    ViewData["Title"] = "Managers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Managers</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Manager Name</th>
                    <th scope="col">Projects</th>
                    <th scope="col">Developers</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-medium">@item.ManagerName</td>
                        <td>@item.ProjectCount</td>
                        <td>@item.DeveloperCount</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.ManagerId" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.ManagerId" class="btn btn-sm btn-info text-white me-1">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.ManagerId" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
