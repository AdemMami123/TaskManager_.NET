@model List<Task_Manager.ViewModels.ManagerViewModel>

@{
    ViewData["Title"] = "Manager Statistics";
}

<h2 class="mt-3">📊 Manager Statistics</h2>

<table class="table table-striped table-bordered mt-3">
    <thead class="thead-dark">
        <tr>
            <th>Manager Name</th>
            <th>Number of Projects</th>
            <th>Number of Developers</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var manager in Model)
        {
            <tr>
                <td>@manager.ManagerName</td>
                <td>@manager.ProjectCount</td>
                <td>@manager.DeveloperCount</td>
            </tr>
        }
    </tbody>
</table>
