@model Task_Manager.Models.TaskItem

@{
    ViewData["Title"] = "Edit Task";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm rounded-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Edit Task</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DeveloperId" class="form-label fw-semibold"></label>
                            <select asp-for="DeveloperId" class="form-select" asp-items="ViewBag.DeveloperId"></select>
                            <span asp-validation-for="DeveloperId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProjectId" class="form-label fw-semibold"></label>
                            <select asp-for="ProjectId" class="form-select" asp-items="ViewBag.ProjectId"></select>
                            <span asp-validation-for="ProjectId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Deadline" class="form-label fw-semibold"></label>
                            <input asp-for="Deadline" class="form-control" />
                            <span asp-validation-for="Deadline" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
