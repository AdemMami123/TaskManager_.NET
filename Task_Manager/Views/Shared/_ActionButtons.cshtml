@model dynamic
@{
    var id = (int)ViewData["Id"];
    var controller = (string)ViewData["Controller"];
    var showEdit = User.IsInRole("Admin") || User.IsInRole("Manager");
    var showDelete = User.IsInRole("Admin") || User.IsInRole("Manager");
}

<div class="btn-group" role="group">
    <a class="btn btn-info btn-sm" asp-controller="@controller" asp-action="Details" asp-route-id="@id">
        <i class="bi bi-info-circle"></i> Details
    </a>
    
    @if (showEdit)
    {
        <a class="btn btn-primary btn-sm" asp-controller="@controller" asp-action="Edit" asp-route-id="@id">
            <i class="bi bi-pencil"></i> Edit
        </a>
    }
    
    @if (showDelete)
    {
        <a class="btn btn-danger btn-sm" asp-controller="@controller" asp-action="Delete" asp-route-id="@id">
            <i class="bi bi-trash"></i> Delete
        </a>
    }
</div>
